<Window x:Class="RSync.Areas.MainWindow.Views.MainWindowV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSync.Areas.MainWindow.Views"
        xmlns:viewmodels="clr-namespace:RSync.Areas.MainWindow.ViewModels"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="250" Width="400">
    <Window.DataContext>
        <viewmodels:MainWindowVM />
    </Window.DataContext>
    <DockPanel Background="DimGray">
        <local:ToolBarV x:Name="ToolBarV" DockPanel.Dock="Top" Height="40" VerticalAlignment="Top" />
    </DockPanel>
</Window>